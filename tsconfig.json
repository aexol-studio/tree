{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src"
  },
  "exclude": ["lib", "build", "node_modules"]
}
