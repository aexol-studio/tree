{
  "extends": "./tsconfig.json",
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "sandbox", "showcase"],
  "compilerOptions": {
    "rootDir": "./src",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  }
}
